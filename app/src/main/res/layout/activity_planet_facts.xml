<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Imagen de fondo fija -->
    <ImageView
        android:id="@+id/fixedBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_facts"
        android:contentDescription="Fondo de la actividad" />

    <!-- Contenido por encima de la imagen de fondo -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/factsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:text="Datos interesantes aquÃ­"
                android:background="@drawable/rounded_background" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
